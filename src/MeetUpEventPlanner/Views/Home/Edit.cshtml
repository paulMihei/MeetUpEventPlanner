@model MeetUpEvent

@{
    ViewBag.Title = $"Edit {Model.Name}";
}

<div class="page-header">
    <h1>Edit <span class="text-primary">@Model.Name</span></h1>
</div>

<form asp-action="Edit" method="post">

    <div  class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div  class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type"></span>
    </div>
    <div  class="form-group">
        <label asp-for="Host"></label>
        <input asp-for="Host" class="form-control" />
        <span asp-validation-for="Host"></span>
    </div>
    <div  class="form-group">
        <div class="input-group date">
            <label asp-for="StartDateAndTime"></label>
            <input asp-for="StartDateAndTime" class="form-control" />
            <span asp-validation-for="StartDateAndTime"></span>
        </div>
    </div>
    <div  class="form-group">
        <label asp-for="EndDateAndTime"></label>
        <input asp-for="EndDateAndTime" class="form-control" />
        <span asp-validation-for="EndDateAndTime"></span>
    </div>
    <div  class="form-group">
        <label asp-for="GuestList"></label>
        <input asp-for="GuestList" class="form-control" />
        <span asp-validation-for="GuestList"></span>
    </div>
    <div  class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message"></span>
    </div>
    <div  class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>